{
    "name": "cris-deitos/easyvol",
    "description": "Sistema gestionale completo per associazioni di volontariato di protezione civile",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "volunteer",
        "civil protection",
        "protezione civile",
        "management system",
        "gestionale",
        "volontariato"
    ],
    "authors": [
        {
            "name": "EasyVol Contributors",
            "email": "info@easyvol.example.com"
        }
    ],
    "require": {
        "php": ">=8.4.0",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-gd": "*",
        "ext-zip": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "suggest": {
        "mpdf/mpdf": "PDF generation library",
        "phpmailer/phpmailer": "Email sending library",
        "phpoffice/phpspreadsheet": "Excel generation library",
        "endroid/qr-code": "QR code generation",
        "google/recaptcha": "Google reCAPTCHA integration"
    },
    "autoload": {
        "psr-4": {
            "EasyVol\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EasyVol\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-security": "composer audit"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
